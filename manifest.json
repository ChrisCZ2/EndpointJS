{
  "manifest_version": 3,
  "name": "Web Resource Scanner",
  "version": "1.0",
  "description": "Scan and analyze web resources from the active tab.",
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
